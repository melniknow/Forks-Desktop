<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.melniknow.fd.UI.Controller">
    <top>
        <HBox>
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>

            <ImageView style="-fx-padding: 0 0 100 0;">
                <Image url="@text.png"/>
            </ImageView>
        </HBox>
    </top>

    <center>
        <TabPane fx:id="tabPane"/>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
            <Button text="Старт" style="-fx-background-color: #00FF00; -fx-text-fill: #000;"
                    fx:id="run" onAction="#onRunButtonClick"/>
        </HBox>
    </bottom>
</BorderPane>
