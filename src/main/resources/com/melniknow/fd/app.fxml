<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.melniknow.fd.ui.Controller">
    <top>
        <HBox spacing="1000">
            <padding>
                <Insets top="20" bottom="10" left="10" right="10"/>
            </padding>

            <ImageView>
                <Image url="@text.png"/>
            </ImageView>
            <Button text="Старт" style="-fx-background-color: #00FF00; -fx-text-fill: #000;"
                    fx:id="run" onAction="#onRunButtonClick"/>
        </HBox>
    </top>

    <center>
        <TabPane fx:id="tabPane"/>
    </center>
</BorderPane>
